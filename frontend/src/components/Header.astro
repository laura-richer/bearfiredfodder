---
const { headerNavItems } = Astro.props;
---

<header class="header">
  <div class="header__container">
    <a href="/">
      <img src="/bff-logo.png" class="header__logo" alt="Bear Fired Fodder"/>
    </a>

    <div class="header__nav">
      <nav class="header__nav-items">
        {headerNavItems.map((navItem, index) => (
          <div>
            <a class="header__nav-link" href={`#section-${index + 1}`}>{navItem}</a>
          </div>
        ))}
      </nav>
    </div>
  </div>
</header>

<style lang="scss" scoped>
@import '@/scss/container';

.header {
  background-color: var(--color-black);
  position: fixed;
  width: 100%;

  &__container {
    display: flex;
    justify-content: space-between;
    @include container;
  }

  &__logo {
    width: 90px;
    height: auto;
  }

  &__nav-items {
    display: flex;
    align-items: center;
    gap: var(--spacer-m);
    height: 100%;
    font-size: 1.8rem;
    font-weight: var(--font-weight-semibold);
  }

  &__nav-link {
      color: var(--color-white);
      text-decoration: none;
      position: relative;

      &:after {
        position: absolute;
        left: -1rem;
        bottom: 0.5rem;
        opacity: 0;
        content: '';
        width: calc(100% + var(--spacer-s));
        background-color: var(--color-red);
        height: 3px;
        transition: all 0.3s ease;
      }

      &:hover,
      &:focus {
        &:after {
          opacity: 1;
          bottom: -1rem;
        }
      }
    }
}
</style>
